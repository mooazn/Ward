# Ward + LLM Integration - Environment Variables
# Copy this to .env and fill in your values

# ==============================================================================
# LLM Configuration (Provider-Agnostic)
# ==============================================================================

# API Key (required)
LLM_API_KEY=your-key-here

# API Base URL (optional - defaults to OpenRouter)
# LLM_BASE_URL=https://openrouter.ai/api/v1           # OpenRouter (default)
# LLM_BASE_URL=https://api.openai.com/v1              # OpenAI
# LLM_BASE_URL=https://api.anthropic.com/v1           # Anthropic
# LLM_BASE_URL=http://localhost:11434/v1              # Ollama (local)
# LLM_BASE_URL=http://localhost:1234/v1               # LM Studio (local)

# Model Name (optional - defaults to deepseek/deepseek-chat)
# LLM_MODEL=deepseek/deepseek-chat                    # DeepSeek via OpenRouter
# LLM_MODEL=gpt-4                                     # OpenAI GPT-4
# LLM_MODEL=claude-3-5-sonnet-20241022                # Anthropic Claude
# LLM_MODEL=llama3.1                                  # Ollama local model

# ==============================================================================
# Backwards Compatibility (Deprecated)
# ==============================================================================

# Old OpenRouter-specific variable (still supported)
# OPENROUTER_API_KEY=your-key-here

# ==============================================================================
# Ward Configuration
# ==============================================================================

# Enable/disable intelligence features (DIRs, risk assessment)
# Default: 0 (disabled for safety)
WARD_ENABLE_INTELLIGENCE=0

# Verbose logging
WARD_VERBOSE=0

# Database path (optional)
WARD_DB_PATH=ward.db

# ==============================================================================
# Example Configurations
# ==============================================================================

# Example 1: OpenRouter + DeepSeek (default)
# LLM_API_KEY=sk-or-v1-...
# LLM_BASE_URL=https://openrouter.ai/api/v1
# LLM_MODEL=deepseek/deepseek-chat

# Example 2: OpenAI GPT-4
# LLM_API_KEY=sk-...
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4

# Example 3: Local Ollama
# LLM_API_KEY=dummy  # Ollama doesn't need real key
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_MODEL=llama3.1

# Example 4: Azure OpenAI
# LLM_API_KEY=your-azure-key
# LLM_BASE_URL=https://your-resource.openai.azure.com/
# LLM_MODEL=gpt-4
